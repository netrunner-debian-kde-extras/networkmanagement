#!/usr/bin/make -f

DEB_KDE_LINK_WITH_AS_NEEDED ?= yes

QUILT_PATCH_DIR := debian/patches
-include /usr/share/topgit/tg2quilt.mk
.PHONY: /usr/share/topgit/tg2quilt.mk

include /usr/share/pkg-kde-tools/makefiles/1/debhelper/kde.mk

DEB_CMAKE_CUSTOM_FLAGS += -DDBUS_SYSTEM_POLICY_DIR=/etc/dbus-1/system.d

override_dh_install:
	rm debian/plasma-widget-networkmanagement/usr/lib/libknmui.so \
	   debian/plasma-widget-networkmanagement/usr/lib/libknmstorage.so \
	   debian/plasma-widget-networkmanagement/usr/lib/libknmdbus.so

%:
	dh --with quilt $@
